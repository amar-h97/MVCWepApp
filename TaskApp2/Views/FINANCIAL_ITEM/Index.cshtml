@model IEnumerable<TaskApp2.Models.FINANCIAL_ITEM>

@{
    ViewBag.Title = "List of items";
}

<h2>List of items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    <button type="button" onclick="location.href='@Url.Action("Calculation","FINANCIAL_ITEM")'">Calculation</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PARTNER.PARTNER_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AMOUNT)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PARTNER.PARTNER_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AMOUNT)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FINANCIAL_ITEM_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.FINANCIAL_ITEM_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FINANCIAL_ITEM_ID })
            </td>
        </tr>
    }
</table>
